\newcommand{\UFPRresumo}[2][]{
	\chapter*{Resumo}
    \ifthenelse{\equal{#1}{}}{
        #2
    }{
        #2
		\\{}
		\\{}
        Palavras-chave: #1
    }
	\addcontentsline{toc}{chapter}{\MakeUppercase{Resumo}}
	\newpage
}

