\newcommand{\UFPRcode}[4]{
	\noindent\begin{minipage}{\textwidth}
		\singlespacing
		\texttt{\lstinputlisting[language=#1, label=#2, caption={#3}]{#4}}
		\doublespacing
	\end{minipage}
}

\newcommand{\UFPRlongcode}[4]{
	\singlespacing
	\texttt{\lstinputlisting[language=#1, label=#2, caption={#3}]{#4}}
	\doublespacing
}


