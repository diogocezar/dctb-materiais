\begin{frame}
    \frametitle{O que é um Bando de Dados?}
    \begin{itemize}
        \item "Uma coleção de dados relacionados"{} [ELMASRI \& NAVATHE];
        \item "Conjunto de dados integrados que tem por objetivo atender a uma comunidade específica"{} [HEUSER];
        \item "Um conjunto de dados"{} [SILBERSCHATZ];
    \end{itemize}
\end{frame}

\begin{frame}
    \frametitle{Componentes de um Sistema de Banco de Dados}
    \begin{itemize}
        \item \emph{Dados}: diferente de informação;
        \item \emph{Hardware}: parte física (armazenamento);
        \item \emph{Software}: SGBD (Sistema Gerenciador de Banco de
        Dados);
        \item \emph{Usuários}: programadores de aplicação, DBA,
        usuário final;
    \end{itemize}
\end{frame}

\subsubsection{Vantagens}

\begin{frame}
    \frametitle{Vantagens}
    \begin{itemize}
        \item \emph{Controle centralizados dos dados}: visão geral,
        relacionamento das informações, entre outros.
        \item Que relação é essa?
        \begin{itemize}
            \item Exemplo: Agenda(nome, telefone, endereço e
            aniversário); Fiado(nome, saldo devedor);

            Situação: Enviar cartões de aniversário para os meus
            clientes exceto para os inadimplentes.
        \end{itemize}
    \end{itemize}
\end{frame}

\subsubsection{Características}

\begin{frame}
    \frametitle{Características}
    \begin{itemize}
        \item \emph{Eliminação de redundância}: duplicidade, perda de
        espaço;
        \item \emph{Controle de consistência}: armazenamento em um único
        local;
        \item \emph{Compartilhamento}: questão de concorrência;
        \item \emph{Restrições de segurança}: nível de acesso por usuário;
        \item \emph{Integridade}: precisão dos dados, validação.
    \end{itemize}
\end{frame}

\subsubsection{Abstração}

\begin{frame}
    \frametitle{Abstração}
    \begin{itemize}
        \item \emph{Nível físico}: armazenamento;
        \item \emph{Nível lógico}: quais dados são armazenados e
        qual a relação entre eles?
    \end{itemize}
\end{frame}

\subsubsection{DDL e DML}
\begin{frame}
    \frametitle{DDL e DML}
    \begin{itemize}
        \item \emph{DDL}: Linguagem de definição de dados;
        \begin{itemize}
            \item Define a estrutura (esquema) de um BD;
            \item Compilação de definições: dicionário de dados
            (dados sobre dados: metadados).
        \end{itemize}
        \item \emph{DML}: Linguagem de modelagem de dados;
        \begin{itemize}
            \item Permite o acesso ou manipulação dos dados no BD;
            \item Recuperação, inserção, exclusão e modificação dos
            dados.
        \end{itemize}
    \end{itemize}
\end{frame}

